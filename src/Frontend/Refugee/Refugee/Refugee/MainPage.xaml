<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Refugee.MainPage"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False">

    <StackLayout>
        <Image Source="logo.png" 
               Margin="50, 150, 50, 50"/>
        
        <Label Text="Seja bem-vindo ao Refugee" 
               FontSize="20" 
               TextColor="Black" 
               HorizontalTextAlignment="Center"
               Margin="50, 50, 50, 0"/>
        
        <Label Text="Cadastre-se já" 
               FontSize="20"
               TextColor="Black" 
               HorizontalTextAlignment="Center"
               Margin="50, 0, 50, 50"/>

        <Button Text="Sou Refugiado" 
                TextColor="White"
                BackgroundColor="Green" 
                FontFamily=""  
                Clicked="LoginRefugiados"
                FontSize="14"
                Margin="50, 100 , 50, 50"/>

    </StackLayout>

</ContentPage>